<p id="notice"><%= notice %></p>
<div class="container">
<h1>Urls</h1>

<table>
  <thead>
    <tr>
      <th>Short url ID</th>
      <th>Long url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.short_url %></td>
        <td><%= url.long_url %></td>
        <td><%= link_to 'Show', url , class:"waves-effect waves-light btn "%></td>
        <td><%= link_to 'Edit', edit_url_path(url), class:"waves-effect waves-light btn" %></td>
        <td><%= link_to 'Remove', url, method: :delete, data: { confirm: 'Are you sure?' }, class:"waves-effect waves-light btn red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_url_path, class:"waves-effect waves-light btn" %>
</div>